<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="quiz_web_page_single_form_inherit" inherit_id="openeducat_quiz.quiz_web_page_single_form">
        <xpath expr="//div[@class='container']" position="after">
            <input type="hidden" name="CourseID" t-attf-value="#{course_val}" />
            <input type="hidden" name="MaterialID" t-attf-value="#{material_val}" />
            <input type="hidden" name="SectionID" t-attf-value="#{section_val}" />
        </xpath>
    </template>

    <!-- Channels: no channel found -->
    <template id="course_not_found" name="Private Presentation">
        <t t-call="website.layout">
            <div class="container">
                <div class="oe_structure">
                    <center>
                        <h2>Nothing created or published yet.</h2>
                    </center>
                </div>
            </div>
        </t>
    </template>

    <!-- /Course Listing -->
    <template id="courses" name="Courses">
        <t t-call="website.layout">
            <div class="oe_structure" />
            <section style="border-bottom: 1px solid #e7e7e7;">
                <div class="container">
                    <div class="row">
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            <div class="category-menu__link">
                                <ul id="menu" class="mt16  col-md-11 col-sm-10 col-xs-8">
                                    <li t-if="category">
                                        <span class="text-center mt16 mb32 category-menu__link category-menu__link--primary text-primary" style="font-size: 16px;" t-raw="category.name" t-if="category"></span>
                                    </li>
                                    <li t-foreach="categories" t-as="categ" class="set-icon-cat" style="margin-top: 2px;">
                                        <a t-attf-href="/courses/category/#{slug(categ)}" class="category-menu__link category-menu__link--primary">
                                            <span t-att-class="categ.icon" aria-hidden="true" style="position: relative; left: 15px;"></span>
                                            <span t-field="categ.name" style="padding-left: 20px;" />
                                        </a>

                                    </li>
                                </ul>
                                <ol class="mt16 col-md-1 col-sm-2 col-xs-2" style="display: none;">
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">More
                                            <span class="caret"/>
                                        </a>
                                        <ul id="submenu" class="dropdown-menu mt8" style="left: -84px;"></ul>
                                    </li>
                                </ol>
                            </div>
                        </div>
                        <div class="col-md-2 col-sm-2 col-xs-6 mt16">
                            <t t-if="website.user_id != user_id">
                                <a t-if="not is_instructor" data-toggle="modal" data-target="#myModal" class="btn btn-primary" style="border-radius:0px;">
                                    Become an Instructor
                                </a>
                            </t>
                        </div>
                        <div class="col-md-1 col-sm-1 col-xs-6 mt16">
                            <div class="dropdown">
                                <a href="#" class="dropdown-toggle btn btn-primary" data-toggle="dropdown" style="border-radius:0px">
                                    <span class="fa fa-search"></span>
                                </a>
                                <div class="dropdown-menu" role="menu" style="left: inherit;right: 0; margin-top: 8px;">
                                    <form t-attf-action="/courses" role="search" method="get">
                                        <div class="input-group" style="width: 303px;padding: 9px;">
                                            <input type="text" class="form-control" name="search" t-attf-placeholder="Search" t-att-value="search" style="border-radius:0px" />
                                            <span class="input-group-btn">
                                                <button class="btn btn-primary"
                                                        type="submit"
                                                        style="border-radius:0px">
                                                    <i class="fa fa-search"></i>
                                                </button>
                                            </span>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <div id="myModal" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <!-- Modal Header -->
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                Ã—
                            </button>
                            <h4 class="modal-title" id="myModalLabel">
                                Become an Instructor!
                            </h4>
                        </div>

                        <!-- Modal Body -->
                        <div class="modal-body">
                            <form class="form-horizontal" id="instructor" role="form" action="/become-instructor" method="POST">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label mb8" for="name">First Name
                                    </label>
                                    <div class="col-sm-9 mb8">
                                        <input type="text" name="name" class="form-control" required="1" />
                                    </div>

                                    <label class="col-sm-3 control-label mb8" for="last_name">Last Name
                                    </label>
                                    <div class="col-sm-9 mb16">
                                        <input type="text" name="last_name" class="form-control" required="required" />
                                    </div>

                                    <label class="col-sm-3 control-label mb8" for="gender">Gender
                                    </label>
                                    <div class="col-sm-9 mb32">
                                        <input type="radio" name="gender" value="male" /> Male
                                        <input type="radio" name="gender" value="female" /> Female
                                    </div>

                                    <label class="col-sm-3 control-label mb8" for="birth_date">Birth Date
                                    </label>
                                    <div class="col-sm-9 mb8">
                                        <input type="date" name="birth_date" class="form-control" required="required" />
                                    </div>

                                    <label class="col-sm-3 control-label mb8" for="designation">Designation
                                    </label>
                                    <div class="col-sm-9 mb8">
                                        <input type="text" name="designation" class="form-control" />
                                    </div>

                                    <label class="col-sm-3 control-label mb8" for="bio-data">Bio Data
                                    </label>
                                    <div class="col-sm-9 mb8">
                                        <textarea rows="4" cols="50" name="bio-data" class="form-control" />
                                    </div>
                                </div>
                                <div class="mt32 text-right">

                                    <button type="button" class="btn btn-default" data-dismiss="modal">
                                        Close
                                    </button>
                                    <button type="submit" id="submitForm" class="btn btn-primary">
                                        Create
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container mt32 mb64">
                <div class="row">
                    <!--<h1 class="text-center mt16 mb32" t-raw="category.name"
                        t-if="category"></h1>-->
                    <t t-foreach="courses" t-as="course">
                        <div t-if="course_index % 4 == 0" class="clearfix" />
                        <div class="col-md-3 col-sm-3 col-xs-12 mb16">
                            <div class="well" style="padding:0px;">
                                <div class="course-thumbnail">
                                    <a t-attf-href="/course-detail/#{slug(course)}">
                                        <img t-if="not course.image" t-attf-src="/openeducat_lms/static/src/img/channel-default.jpg" class="img img-responsive" />
                                        <img t-if="course.image" t-attf-src="/web/image/op.course/#{course.id}/image" class="img img-responsive" />
                                    </a>
                                </div>
                                <div>
                                    <div class="course-title">
                                        <h2 class="website_lms_h2">
                                            <a t-attf-href="/course-detail/#{slug(course)}"
                                               t-esc="course.name"/>
                                        </h2>
                                    </div>
                                    <div class="course-instructor">
                                        Teacher:
                                        <span style="font-weight: 600;">
                                            <t t-if="course.faculty_ids"
                                               t-esc="course.faculty_ids[0].name"/>
                                        </span>
                                        <span class="faculty-img hidden-sm">
                                            <img t-if="course.faculty_ids"
                                                 t-att-src="'data:image/png;base64,%s' % (course.faculty_ids[0].image)"
                                                 height="32" width="32"
                                                 class="img img-circle"/>
                                        </span>
                                    </div>
                                    <div class="course-price">
                                        <span t-if="course.type == 'free'">
                                            Free
                                        </span>
                                        <span t-if="course.type == 'paid'">
                                            <span t-esc="course.product_id.website_price" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                            <!-- <t t-esc="course.price"/> -->
                                            <!-- <span itemprop="priceCurrency" t-esc="website.currency_id.name" /> -->
                                        </span>
                                    </div>
                                    <div class="course-student">
                                        <span>
                                            <i class="fa fa-users" aria-hidden="true"></i>
                                            Students:
                                            <b>
                                                <t t-esc="len(course.course_enrollment_ids)"/>
                                            </b>
                                            <t t-call="rating.rating_card">
                                                <t t-set="rating_stat"
                                                   t-value="course.rating_get_stats()"/>
                                                <t t-set="max_rate"
                                                   t-value="5"/>
                                                <t t-set="min_rate"
                                                   t-value="1"/>
                                            </t>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
                <div style="text-align:center;">
                    <t t-call="website.pager" />
                </div>
            </div>
            <div class="oe_structure" />
        </t>
    </template>

    <!-- Course Listing Template -->
    <template id="my-courses" name="My Courses">
        <t t-call="website.layout">
            <div class="container mt64">
                <div class="row">
                    <t t-foreach="courses" t-as="course">
                        <div t-if="course_index % 3 == 0" class="clearfix" />
                        <div class="col-md-3 col-sm-3 col-xs-12 mb16">
                            <div class="well" style="padding:0px;">
                                <div class="course-thumbnail">
                                    <a t-attf-href="/course-detail/#{slug(course['course'])}">
                                        <img t-if="not course['course'].image" t-attf-src="/openeducat_lms/static/src/img/channel-default.jpg" class="img img-responsive" />
                                        <img t-if="course['course'].image" t-attf-src="/web/image/op.course/#{course['course'].id}/image" class="img img-responsive" />
                                    </a>
                                </div>
                                <div>
                                    <div class="course-title">
                                        <h2 class="website_lms_h2">
                                            <a t-attf-href="/course-detail/#{slug(course['course'])}"
                                               t-esc="course['course'].name"/>
                                        </h2>
                                    </div>
                                    <div class="course-instructor">
                                        Teacher:
                                        <span style="font-weight: 600;">
                                            <t t-if="course['course'].faculty_ids"
                                               t-esc="course['course'].faculty_ids[0].name"/>
                                        </span>
                                        <span class="faculty-img hidden-sm">
                                            <img t-if="course['course'].faculty_ids"
                                                 t-att-src="'data:image/png;base64,%s' % (course['course'].faculty_ids[0].image)"
                                                 height="32" width="32"
                                                 class="img img-circle"/>
                                        </span>
                                    </div>
                                    <div class="course-instructor" style="padding-top: 6px; padding-bottom: 6px;">
                                        <span style="font-weight: 600;">
                                            Completed
                                            <span class="text-primary"
                                                  style="float: right;">
                                                <t t-raw="course['completed_percentage']"/>
                                                %
                                            </span>
                                        </span>
                                    </div>
                                    <div class="course-price">
                                        <a t-attf-href="/course/enroll/#{slug(course['course'])}" t-if="not course['enrolled']" class="btn btn-block btn-primary" style="border-radius: 0px;">
                                            Enroll Course
                                        </a>
                                        <a t-attf-href="/course/#{slug(course['course'])}" t-if="course['completed_percentage'] == 0 and course['enrolled']" class="btn btn-block btn-primary" style="border-radius: 0px;">
                                            Start Course
                                        </a>
                                        <a t-attf-href="/course/#{slug(course['course'])}" t-if="course['completed_percentage']" class="btn btn-block btn-primary" style="border-radius: 0px;">
                                            Continue Learning
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <!-- Material: main template: Preview view -->
    <template id="material_preview_view" name="Material Preview View">
        <t t-call="website.layout">
            <t t-set="main_object" t-value="material" />
            <div class="container mt16">
                <div class="row">
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 col-lg-offset-2 col-md-offset-2">
                        <t t-if="material.datas and material.material_type == 'infographic'">
                            <img t-attf-src="/web/image/op.material/#{material.id}/datas" class="img-responsive" style="width:100%" />
                        </t>
                        <div t-if="material.material_type in ('presentation', 'document')" class="embed-responsive embed-responsive-4by3 embed-responsive-item mb8">
                            <t t-raw="material.embed_code" />
                        </div>
                        <div t-if="material.material_type == 'video' and material.document_id" class="embed-responsive embed-responsive-16by9 embed-responsive-item mb8">
                            <t t-raw="material.embed_code" />
                        </div>
                        <div t-if="material.material_type == 'video' and material.datas" class="embed-responsive embed-responsive-16by9 embed-responsive-item mb8">
                            <t t-raw="material.embed_code" />
                        </div>
                        <div t-if="material.material_type == 'audio'" class="embed-responsive embed-responsive-16by9 embed-responsive-item mb8">
                            <t t-raw="material.embed_code" />
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    <template id="portal_my_course_menu" name="Portal layout : sales menu entries" inherit_id="website_portal.portal_layout" priority="25">
        <xpath expr="//ul[contains(@class,'o_portal_submenu')]" position="inside">
            <li>
                <a href="/my/course">Course</a>
            </li>
        </xpath>
    </template>
    <template id="portal_my_course" name="Portal My Home : Course entries" inherit_id="website_portal.portal_my_home">
        <xpath expr="//div[contains(@class,'o_my_home_content')]" position="inside">
            <h3 class="page-header">
                <a href="/my/course">Your Course
                    <small class="ml8">
                        <t t-if="course_count">
                            <span class='badge'><t t-esc="course_count"/> </span>
                        </t>
                        <t t-if="not course_count">
                            There are currently no quotes for your account.
                        </t>
                    </small>
                </a>
            </h3>
        </xpath>
    </template>
</odoo>
